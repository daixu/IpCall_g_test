<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="wrap_content">
	<TextView android:text="" android:id="@+id/tv1"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:textSize="15dip" />
	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="wrap_content">
		<ImageView android:id="@+id/imageView" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:src="@drawable/icon" android:paddingRight="5dip"/>
		<LinearLayout android:orientation="vertical" android:paddingTop="15dip"
			android:layout_width="0dip" android:layout_height="wrap_content"
			android:layout_weight="1" android:paddingRight="10dip">
			<TextView android:id="@+id/textView_title"
				android:layout_width="wrap_content" android:layout_height="wrap_content" />
			<View android:layout_width="fill_parent" android:layout_height="10dip"/>
			<ProgressBar android:id="@+id/progressBar_downLoad"
				android:visibility="gone" style="?android:attr/progressBarStyleHorizontal"
				mce_style="?android:attr/progressBarStyleHorizontal"
				android:layout_width="fill_parent" android:layout_height="5dip" />
		</LinearLayout>
		<LinearLayout android:orientation="horizontal"
			android:layout_width="0dip" android:layout_height="wrap_content"
			android:layout_weight="1" android:paddingTop="15dip">
			<Button android:text="开始" android:id="@+id/button_download_start_or_pause"
				android:layout_width="wrap_content" android:layout_height="wrap_content" />
			<Button android:text="取消" android:visibility="gone"
				android:id="@+id/button_download_cancel" android:layout_width="wrap_content"
				android:layout_height="wrap_content" />
		</LinearLayout>
	</LinearLayout>
	<TextView android:text="" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:textSize="15dip" />
	<!-- <TextView android:id="@+id/textView_message" android:layout_width="wrap_content" 
		android:layout_height="wrap_content"/> -->
</LinearLayout>